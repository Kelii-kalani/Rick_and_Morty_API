@using Rick_and_Morty_API.Models
@model Root

<body>
    <header>
        <div class="charCollection">
            @foreach (var character in Model.Results)
            {
                <ul style="list-style:none" class="card">
                    <li><img src=@character.Image></li>
                    <li style="color:chartreuse"><b>Name: @character.Name</b></li>
                    <li style="color:chartreuse">Species: @character.Species</li>
                    <li style ="color:chartreuse">Gender: @character.Gender</li>
                    <li style="color:chartreuse">Type: @character.Type</li>
                    <li style="color:chartreuse">Status: @character.Status</li>
                    <li style="color:chartreuse">Origin: @character.Origin.Name</li>
                    <li style="color:chartreuse">Location: @character.Location.Name</li>
                </ul>
            }
        </div>
        <div>
            @if (@Model.Info.Prev != null)
            {
                <a asp-action="Index" asp-route-resource_url="@Model.Info.Prev" class="btn btn-lg btn-success">Previous Page</a>
            }
            @if (@Model.Info.Next != null)
            {
                <a asp-action="Index" asp-route-resource_url="@Model.Info.Next" class="btn btn-lg btn-success">Next Page</a>
            }
        </div>
    </header>
</body>